<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <corners
            android:radius="10dp"
        />
    <gradient
        android:endColor="@color/transparent_black"
        android:startColor="@color/transparent_black"
        android:centerColor="@color/transparent_black"
        android:angle="90"
        android:centerX="35%"
        android:type="linear"
        />
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"
        />

    <stroke
        android:width="1dp"
        android:color="@color/transparent_white"
        />
</shape>