<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/tips3"
            android:id="@+id/img_tips"
            android:adjustViewBounds="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:paddingTop="5dp"
            android:id="@+id/imgtext_tips"
            android:textAlignment="viewStart"
            android:layout_alignBottom="@+id/img_tips"
            android:textSize="@dimen/slide_title_textsize"
            android:text="Tips"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="start" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@color/brown"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:background="@color/brown"
            android:id="@+id/pause"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_margin="10dp"
        android:text="@string/tips_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:text="@string/demotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>