<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="20dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/slide_background_4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutritionActivity6">

    <LinearLayout
        android:layout_marginTop="180dp"
        android:id="@+id/nutrition_activity6_images1"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="10dp"
            android:src="@drawable/nutrition_video6"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="15dp"
            android:layout_gravity="center"
            android:background="@drawable/nutrition_activity_textview_border6"
            android:text="Watch a video and unlock this content once"
            android:textColor="@color/lightWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nutrition_activity6_images2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingRight="10dp"
            android:src="@drawable/logopro"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:gravity="center"
            android:background="@drawable/nutrition_activity_textview_border6"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Get Pro Version"
            android:textColor="@color/lightWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/button"
        android:layout_width="200dp"
        android:layout_height="80dp" />

        <ImageView
            android:tint="@color/lightWhite"
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/nutrition_ic_left_arrow6" />
        <TextView
            android:textSize="16dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/lightWhite"
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>