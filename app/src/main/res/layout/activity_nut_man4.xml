<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/slide_background_3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutMan4">
    <LinearLayout
        android:id="@+id/nutman_lay_image1_m"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:src="@drawable/nut_go_down_m"
            android:layout_margin="5dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/exercise_activity2_images"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_color="@color/brown"
            app:civ_border_width="1dp" />
        <TextView
            android:background="@drawable/nutrition_activity_textview_border4"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/lightWhite"
            android:text="Go down"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nutman_lay_image2_m"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:src="@drawable/nut_keep_m"
            android:layout_margin="5dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_color="@color/brown"
            app:civ_border_width="1dp" />
        <TextView
            android:background="@drawable/nutrition_activity_textview_border4"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/lightWhite"
            android:text="Keep"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nutman_lay_image3_m"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:src="@drawable/nut_go_up_m"
            android:layout_margin="5dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_color="@color/brown"
            app:civ_border_width="1dp" />
        <TextView
            android:background="@drawable/nutrition_activity_textview_border4"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/lightWhite"
            android:text="Go up"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>