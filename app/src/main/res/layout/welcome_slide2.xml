<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_walkthrough_b" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/image_width_height_120dp"
            android:layout_height="@dimen/image_width_height_120dp"
            android:padding="7dp"
            android:src="@drawable/ic_walkthrough_b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise guide"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_title_textsize"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/padding_description"
            android:paddingRight="@dimen/padding_description"
            android:text="@string/slide2_description"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_description_textsize" />

    </LinearLayout>


</RelativeLayout>